{
    "compilerOptions": {
        "allowJs": true,
        "target": "es5",
        "module": "system",
        "allowUnreachableCode": true,
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "build/tsc",
        "sourceMap": true
    },
    "filesGlob": [
        "!node_modules/**",
        "!typings/**"
    ],
    "compileOnSave": true,
    "buildOnSave": false,
    "files": [
        "./src/ts/Main.ts"
    ]
}
